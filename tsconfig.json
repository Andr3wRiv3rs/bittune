{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2017", "es7", "es6", "dom"],
    "target": "es6",
    "strict": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@types": ["./@types/index"]
    },
    "declaration": true,
  },
  "include": ["./src/**/*.ts", "./@types/**/*.ts"]
}